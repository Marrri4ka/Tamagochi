@using Tamagotchi.Models;
<h1>Tamagotchi</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no animals in your to do list!</p>
}
@if(@Model.Count != 0)
{
  @foreach (Animal animal in Model)
{
  <li><a href = "/animals/@animal.GetId()">@animal.GetName() </a>
  Food: @animal.GetFood()
  Rest: @animal.GetRest()
  Attention: @animal.GetAttention()
  <form action ="/animals/@animal.GetId()/feed" method ="post">
  <button type="submit">Feed</button>
  </form>
  <form action ="/animals/@animal.GetId()/sleep" method ="post">
  <button type="submit">Sleep</button>
  </form>
  <form action ="/animals/@animal.GetId()/play" method ="post">
  <button type="submit">Play</button>
  </form>

  </li>
}
}


</ul>
<a href="/animals/new">Add a new animal.</a>
<form  action="/animals/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
<form action="animals/timepass" method="post">
  <button type="submit" name="button">Pass time!</button>
</form>
